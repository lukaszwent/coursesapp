<% layout("layouts/boilerplate") %>
<div class="row pt-5">
  <% for(course of allcourses) { %>
    <% if(course.isArchived) {%> 
      <div class="col-12 ownStyle">
        <div class="row">
            <div class=" col-2 offset-5">
                <form method="POST" action="/courses/<%= course._id %>?_method=DELETE"><button type="submit" class="btn btn-outline-secondary">Usuń z historii</button></form> 
            </div>

        </div>
      <div class="card mb-3 customStyle" style="max-width: 100%;">
        
        <div class="row g-0">
            
            

            <div class="col-md-2 d-flex justify-content-center">
              <img src="<%= course.image%>" class="img-fluid img-thumbnail rounded-start " alt="...">
            </div>

            <div class="col-md-10 align-items-center ">
              
              <div class="">
                <h5 class="card-title"><%= course.name%></h5>
              </div>
              
              <div class="d-flex flex-md-row flex-column pt-2">

              <div class="col-md-2">
              <div class="card-text"><%= Math.round(course.usersTime/60.0) %>/<%= Math.round(course.time/60.0)%>h</div>
              
            </div>
            <div class="col-md-10">
                <div class="progressBarContainer">
                  <div class="progressBar"></div>
                  <div class="prog">
                    <%= Math.round((course.usersTime/course.time)*100) + '%'; %>
                    </div>
                </div>
                
                <div>Do obejrzenia pozostało: <%= course.time - course.usersTime %> minut. </div>
              </div>

            </div>
            


            </div>

            

            

          </div>
      

    </div>
      </div>

  <% }} %>
    <% if(!allcourses) {%>
      <div><h2>Brak kursów</h2></div>
    <% } %> 
</div>
        